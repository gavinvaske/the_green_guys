<div id="contact-section" class="section bg-white">
    <div class="row">
        <div class="col-12 .col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <div id="contact-info" class="d-flex justify-content-center align-items-center flex-column">
                <div class="p-2"><h2 class="section-title">CONTACT US</h2></div>
                <address class="p-2">West Des Moines, Iowa 50266, US</address>
                <address class="p-2">Centar@yahoo.com</address>
                <address class="p-2">(555) 978-6969</address>
            </div> 
        </div>
        <div class="col-12 .col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <form id="contact-form" class="d-flex flex-column">
                <div class="row">
                    <div class="col">
                        <input name="username" id='contact-form-name' type="text" class="form-control" placeholder="Name">
                    </div>
                    <div class="col">
                        <input name="userEmail" id='contact-form-email' type="text" class="form-control" placeholder="Email">
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <input name="emailSubject" id='contact-form-subject' type="text" class="form-control" placeholder="Subject">
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <textarea name="emailMessage" id='contact-form-message' class="form-control" rows="3" placeholder="Message"></textarea>
                    </div>
                </div>
                <div class="row align-self-center">
                    <button id="contact-form-button" type="submit" class="btn btn-primary">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>